inputBox.Parent = frame

-- Auto Lock Button
local autoLockBtn = Instance.new("TextButton")
autoLockBtn.Size = UDim2.new(1, -20, 0, 28)
autoLockBtn.Position = UDim2.new(0, 10, 0, 134)
