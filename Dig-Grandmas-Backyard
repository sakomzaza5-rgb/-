----------------------------------------------------
-- âš™ï¸ Core Function (Full 360Â°)
----------------------------------------------------
local function digAtPosition(pos)
	local args = {pos, Vector3.new(0, -1, 0)}
	Remote:FireServer(unpack(args))
end

local function startAutoDig()
	while AutoDigEnabled do
		task.wait(DELAY)
		if not Root or not Root.Parent then
			Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
			Root = Character:WaitForChild("HumanoidRootPart")
		end

		-- ğŸ”„ à¸‚à¸¸à¸”à¸—à¸¸à¸à¹€à¸¥à¹€à¸¢à¸­à¸£à¹Œà¹ƒà¸™à¸£à¸±à¸¨à¸¡à¸µ (à¸šà¸™-à¸à¸¥à¸²à¸‡-à¸¥à¹ˆà¸²à¸‡)
		for y = -RANGE, RANGE, HEIGHT_STEP do
			for x = -RANGE, RANGE, STEP do
				for z = -RANGE, RANGE, STEP do
					local pos = Vector3.new(
						Root.Position.X + x,
						Root.Position.Y + y,
						Root.Position.Z + z
					)
					digAtPosition(pos)
				end
			end
		end
	end
end

----------------------------------------------------
-- ğŸ§  Button Controls
----------------------------------------------------
ToggleButton.MouseButton1Click:Connect(function()
	clickSound:Play()
	AutoDigEnabled = not AutoDigEnabled
	if AutoDigEnabled then
		ToggleButton.Text = "ğŸŸ¢ Auto Dig: ON"
		ToggleButton.BackgroundColor3 = Color3.fromRGB(0,150,0)
		task.spawn(startAutoDig)
	else
		ToggleButton.Text = "ğŸ”´ Auto Dig: OFF"
		ToggleButton.BackgroundColor3 = Color3.fromRGB(150,0,0)
	end
end)

RangeBox.FocusLost:Connect(function()
	local val = tonumber(RangeBox.Text)
	if val and val >= 10 and val <= 1000 then
		RANGE = val
		RangeLabel.Text = "Range: "..val
	else
		RangeBox.Text = tostring(RANGE)
	end
end)

DelayBox.FocusLost:Connect(function()
	local val = tonumber(DelayBox.Text)
	if val and val >= 0.01 and val <= 1 then
		DELAY = val
		DelayLabel.Text = "Delay: "..val
	else
		DelayBox.Text = tostring(DELAY)
	end
end)
